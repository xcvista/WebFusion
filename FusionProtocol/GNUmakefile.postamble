
before-all::
	printf "{ \"git-version\" = \"%s\"; }\n" `git describe --always --tag` > git-version.plist

after-all::
	-ln -s FusionProtocol.framework/Headers FusionProtocol
	-ln -s FusionProtocol.framework/libFusionProtocol.so libFusionProtocol.so

before-clean::
	-rm FusionProtocol
	-rm libFusionProtocol.so

after-clean::
	-rm git-version.plist
