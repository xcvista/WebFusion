
before-all::
	printf "{ \"git-version\" = \"%s\"; }\n" `git describe --always --tag` > git-version.plist

after-all::
	ln FusionProtocol.framework/Headers FusionProtocol
	ln FusionProtocol.framework/libFusionProtocol.so libFusionProtocol.so

after-clean::
	-rm git-version.plist
	-rm FusionProtocol
	-rm libFusinProtocol.so